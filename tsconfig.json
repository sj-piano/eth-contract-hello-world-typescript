{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./build",
    "paths": {
      "#root/*": ["*"],
      "#lib/*": ["lib/*"],
      "#src/*": ["src/*"],
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "files": ["./hardhat.config.ts"],
  "include": ["./lib/**/*", "./scripts/**/*", "./src/**/*", "./test/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}